<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="@dimen/bild_width"
                android:layout_height="@dimen/bild_hight"
                android:id="@+id/person_photo"
                android:src="@drawable/nils" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:textSize="20sp"
                android:text="Nils Digel"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_age"
                android:text="017649360367"
                android:layout_below="@+id/person_job"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Vorsitzender"
                android:id="@+id/person_job"
                android:textSize="17sp"
                android:layout_below="@+id/person_name"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nils.digel@tc-schÃ¶nningstedt.de"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/person_email"
                android:layout_below="@+id/person_age"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>